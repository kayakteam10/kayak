# ==================================================
# KAYAK SIMULATION - ENVIRONMENT CONFIGURATION
# ==================================================
# Copy this file to .env and update with your values
# For AWS deployment, these will be set in EC2 instance environment

# ==================================================
# GATEWAY / PLATFORM SERVICE
# ==================================================
GATEWAY_HOST=localhost
GATEWAY_PORT=8080
GATEWAY_URL=http://localhost:8080

# ==================================================
# FRONTEND
# ==================================================
FRONTEND_HOST=0.0.0.0
FRONTEND_PORT=3000
FRONTEND_URL=http://localhost:3000

# Public URL for frontend (used in CORS, redirects)
PUBLIC_FRONTEND_URL=http://localhost:8088

# ==================================================
# MICROSERVICES
# ==================================================

# Flight Service
FLIGHT_SERVICE_HOST=flight-service
FLIGHT_SERVICE_PORT=8001
FLIGHT_SERVICE_URL=http://flight-service:8001

# Hotel Service
HOTEL_SERVICE_HOST=hotel-service
HOTEL_SERVICE_PORT=8002
HOTEL_SERVICE_URL=http://hotel-service:8002

# Car Service
CAR_SERVICE_HOST=car-service
CAR_SERVICE_PORT=8003
CAR_SERVICE_URL=http://car-service:8003

# Booking Service
BOOKING_SERVICE_HOST=booking-service
BOOKING_SERVICE_PORT=8004
BOOKING_SERVICE_URL=http://booking-service:8004

# Payment Service
PAYMENT_SERVICE_HOST=payment-service
PAYMENT_SERVICE_PORT=8005
PAYMENT_SERVICE_URL=http://payment-service:8005

# Review Service
REVIEW_SERVICE_HOST=review-service
REVIEW_SERVICE_PORT=8006
REVIEW_SERVICE_URL=http://review-service:8006

# AI Service
AI_SERVICE_HOST=ai-service
AI_SERVICE_PORT=8007
AI_SERVICE_URL=http://ai-service:8007

# ==================================================
# DATABASES
# ==================================================

# MySQL
MYSQL_HOST=mysql
MYSQL_PORT=3306
MYSQL_DATABASE=kayak_db
MYSQL_USER=root
MYSQL_PASSWORD=rootpassword
MYSQL_ROOT_PASSWORD=rootpassword
DATABASE_URL=mysql://root:rootpassword@mysql:3306/kayak_db

# MongoDB
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_DATABASE=kayak_reviews
MONGODB_URL=mongodb://mongodb:27017/kayak_reviews

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# ==================================================
# MESSAGE QUEUE
# ==================================================

# Kafka
KAFKA_BROKER=kafka:9092
KAFKA_TOPIC_DEALS=deals-updates
ZOOKEEPER_HOST=zookeeper:2181

# ==================================================
# EXTERNAL SERVICES
# ==================================================

# Google Gemini AI
GEMINI_API_KEY=your_gemini_api_key_here

# ==================================================
# APPLICATION SETTINGS
# ==================================================

# Environment
NODE_ENV=development
FLASK_ENV=development

# Logging
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
SESSION_SECRET=your_session_secret_here

# CORS
CORS_ORIGIN=http://localhost:8088

# ==================================================
# AWS DEPLOYMENT (Production Override)
# ==================================================
# Uncomment and set these for AWS deployment
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=kayak-assets
# AWS_RDS_ENDPOINT=your-rds-endpoint.region.rds.amazonaws.com
# AWS_ELASTICACHE_ENDPOINT=your-elasticache-endpoint.cache.amazonaws.com
